<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring/border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#333333" /> <!-- Dark gray border color matching the image -->
            <size android:width="70dp" android:height="70dp" />
        </shape>
    </item>

    <!-- Inner circle with black background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#121212" /> <!-- Very dark background/almost black -->
        </shape>
    </item>
</layer-list>