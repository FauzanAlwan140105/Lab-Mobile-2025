<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/abu_abu"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_share_24"
            app:layout_constraintEnd_toStartOf="@id/more_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/oip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_icon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profile"
            app:layout_constraintTop_toTopOf="@id/profile" />

        <TextView
            android:id="@+id/anoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="zabilsabri • Man"
            android:textColor="@color/material_dynamic_neutral50"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            app:layout_constraintStart_toEndOf="@id/profile"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/material_dynamic_neutral50"
            android:padding="10dp"
            android:text="Syntax error"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Berusaha dalam hidup"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status" />

        <ImageView
            android:id="@+id/building"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_apartment_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slogan" />

        <TextView
            android:id="@+id/ketbuild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Hasanuddin University"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/building"
            app:layout_constraintStart_toEndOf="@id/building"
            app:layout_constraintTop_toTopOf="@id/building" />

        <ImageView
            android:id="@+id/maps"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_add_location_alt_24"
            app:layout_constraintStart_toEndOf="@id/ketbuild"
            app:layout_constraintTop_toBottomOf="@id/slogan" />

        <TextView
            android:id="@+id/ketmaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Makassar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/building"
            app:layout_constraintStart_toEndOf="@id/maps"
            app:layout_constraintTop_toTopOf="@id/building" />

        <ImageView
            android:id="@+id/person"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_add_location_alt_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/building" />

        <TextView
            android:id="@+id/followCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="26"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/person"
            app:layout_constraintStart_toEndOf="@id/person"
            app:layout_constraintTop_toTopOf="@id/person" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="followers"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/person"
            app:layout_constraintStart_toEndOf="@id/followCount"
            app:layout_constraintTop_toTopOf="@id/person" />

        <TextView
            android:id="@+id/followingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="•  21"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/person"
            app:layout_constraintStart_toEndOf="@id/follow"
            app:layout_constraintTop_toTopOf="@id/person" />

        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="following"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/person"
            app:layout_constraintStart_toEndOf="@id/followingCount"
            app:layout_constraintTop_toTopOf="@id/person" />

        <ImageView
            android:id="@+id/trophy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_add_location_alt_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person" />

        <androidx.cardview.widget.CardView
            android:id="@+id/satu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="60dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/trophy"
            app:layout_constraintStart_toEndOf="@id/trophy"
            app:layout_constraintTop_toTopOf="@+id/trophy">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/oip" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dua"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="60dp"
            android:layout_marginStart="-10dp"
            app:layout_constraintBottom_toBottomOf="@+id/trophy"
            app:layout_constraintStart_toEndOf="@id/satu"
            app:layout_constraintTop_toTopOf="@+id/trophy">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/oip" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tiga"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="60dp"
            android:layout_marginStart="-10dp"
            app:layout_constraintBottom_toBottomOf="@+id/trophy"
            app:layout_constraintStart_toEndOf="@id/dua"
            app:layout_constraintTop_toTopOf="@+id/trophy">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/oip" />

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/satu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/abu_abu"
            android:text="FOLLOWING" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/readme" />

        <TextView
            android:id="@+id/readme"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zabilsabri/README.md"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/trophy" />

        <View
            android:id="@+id/linee"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/readme" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_marginTop="156dp"
            android:src="@drawable/oip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linee" />

        <LinearLayout
            android:id="@+id/sosmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="LINKEDIN"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@color/design_default_color_on_secondary"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="INSTAGRAM"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@color/design_default_color_on_secondary"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/sosmed"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile views"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textAlignment="center"
                android:background="@color/design_default_color_on_secondary"
                android:layout_marginTop="5dp"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,120"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textAlignment="center"
                android:background="@color/design_default_color_on_secondary"
                android:layout_marginTop="5dp"
                android:padding="2dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>